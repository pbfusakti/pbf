<script>
function getVal(id,element){

	
	var element_semester = "#idsemesterstatus"+id;
	
	var isChecked = $(element).is(':checked');

	if(isChecked==true){		
		$(element_semester).removeAttr("disabled"); 
	}else{
		$(element_semester).attr("disabled", "disabled"); 
	}
}

function cetak(){
	
